---
// import data from "../lib/data.json";
import HeaderList from "../components/HeaderList";
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
// const { contents } = data;
const dataModules = import.meta.glob("../pages/*.md", { eager: true });
const data = Object.values(dataModules);
const contents = data.map(({ frontmatter }: any) => frontmatter);
---

<header
  class="fixed top-0 left-0 w-full z-10 grid grid-cols-[auto_1fr_auto] items-center gap-[1.7rem] md:gap-[4.8rem] px-[1.8rem] pt-[2.4rem] pb-[2.4rem] md:px-[2.4rem] md:pt-8 md:pb-8"
>
  <a href="/">
    <Image
      src={logo}
      alt="logo"
      class="h-[5.4rem] md:h-[7.9rem] w-auto invert brightness-0"
    />
  </a>
  <HeaderList client:load transition:persist contents={contents} />
  <a
    class="text-[1.6rem] md:text-[2rem] flex items-center justify-center gap-[0.6rem] text-white h-fit text-center font-neue font-semibold leading-[100%]"
    href="mailto:imafuku@yaad.tokyo"
  >
    <span>Contact</span>
    <span>
      <svg
        class="w-[1.7rem] md:w-[2.1rem]"
        width="17"
        height="17"
        viewBox="0 0 17 17"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <circle cx="8.5" cy="8.5" r="8.5" fill="white"></circle>
      </svg>
    </span>
  </a>
</header>
